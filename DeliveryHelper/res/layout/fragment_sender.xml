<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <!-- <include layout="@layout/activity_title"/> -->
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <com.weiwend.fooldelivery.customviews.MyTabView
            android:id="@+id/mTabView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
        
	    <com.weiwend.fooldelivery.customviews.MyReboundScrollView
	        android:id="@+id/mScrollView"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_above="@id/mTabView"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="6dip"
	        android:layout_marginRight="6dip"
	        android:layout_marginTop="3dip">
	        <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical">
			    
			    <TextView
				    android:layout_width="match_parent"
				    android:layout_height="1dip"
				    android:layout_marginTop="4dip"
				    android:background="@color/divider_line"/>
			    <RelativeLayout 
			        android:id="@+id/mSenderAddressContainer"
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/sender_address_selector_height"
			        android:background="@color/bg_sender_item">
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="@dimen/sender_item_margin_left"
			            android:text="@string/sender_info"
			            android:layout_alignParentLeft="true"
			            android:textSize="@dimen/sender_textsize_normal"
			            android:textColor="@color/black"
			            android:layout_centerVertical="true"/>
			    </RelativeLayout>
			    <TextView
				    android:layout_width="match_parent"
				    android:layout_height="1dip"
				    android:background="@color/divider_line"/>
			    
			    <RelativeLayout 
			        android:id="@+id/mAddSenderAddressContainer"
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/sender_address_selector_height"
			        android:layout_marginLeft="@dimen/sender_item_margin_left2"
			        android:layout_marginTop="@dimen/sender_address_info_margin_top"
			        android:layout_marginBottom="@dimen/sender_address_info_margin_bottom">
			        <ImageView
			            android:id="@+id/mRightIconView"
			            android:layout_width="@dimen/sender_item_arrow_width"
			            android:layout_height="@dimen/sender_item_arrow_height"
			            android:layout_marginRight="@dimen/sender_item_arrow_margin_right"
			            android:layout_alignParentRight="true"
			            android:layout_centerVertical="true"
			            android:background="@drawable/arrow"
			            android:contentDescription="@null"/>
			         <TextView 
			            android:id="@+id/mMiddleShowView"
			            android:layout_toLeftOf="@id/mRightIconView"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:singleLine="true"
			            android:layout_marginRight="@dimen/sender_click_add_contact_margin_right"
			            android:text="@string/click_to_add_contact"
			            android:textSize="@dimen/sender_textsize_small"
			            android:layout_centerVertical="true"/>
			    </RelativeLayout>
			    
			    <RelativeLayout
			        android:id="@+id/mSenderInfoContainer" 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="@dimen/sender_item_margin_left2"
			        android:layout_marginTop="@dimen/sender_address_info_margin_top"
			        android:layout_marginBottom="@dimen/sender_address_info_margin_bottom"
			        android:visibility="gone">
			        <ImageView
			            android:id="@+id/mSenderAddressArrowIv"
			            android:layout_width="@dimen/sender_item_arrow_width"
			            android:layout_height="@dimen/sender_item_arrow_height"
			            android:layout_marginRight="@dimen/sender_item_arrow_margin_right"
			            android:background="@drawable/arrow"
			            android:layout_centerInParent="true"
			            android:layout_alignParentRight="true"
			            android:contentDescription="@null"/>
			        <LinearLayout
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:orientation="vertical"
				        android:layout_toLeftOf="@id/mSenderAddressArrowIv"
				        android:visibility="visible">
				         <LinearLayout
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:orientation="horizontal">
					        <TextView 
						        android:id="@+id/mSenderNameTv"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:singleLine="true"
						        android:text="@string/sender_name"
						        android:textSize="@dimen/sender_textsize_small"
						        android:textColor="@drawable/text_color_black_gray_selector"/>
					        <TextView 
						        android:id="@+id/mSenderPhoneTv"
						        android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:singleLine="true"
						        android:layout_marginLeft="@dimen/sender_phone_info_margin_left"
						        android:layout_marginRight="@dimen/sender_phone_info_margin_right"
						        android:text="@string/sender_phone"
						        android:textSize="@dimen/sender_textsize_small"
						        android:textColor="@drawable/text_color_black_gray_selector"/>
				        </LinearLayout>
				        
				        <TextView 
					        android:id="@+id/mSenderTotalAddressTv"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:layout_marginRight="@dimen/sender_total_address_margin_right"
					        android:layout_marginTop="4dip"
					        android:singleLine="true"
					        android:text="@string/addreess_detail"
					        android:textSize="@dimen/sender_textsize_small"/>
				    </LinearLayout>
			    </RelativeLayout>
			    
			    <TextView
				    android:layout_width="match_parent"
				    android:layout_height="1dip"
				    android:layout_marginTop="4dip"
				    android:background="@color/divider_line"/>
			    <RelativeLayout
			        android:id="@+id/mRecipientAddressContainer" 
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/sender_address_selector_height"			        
			        android:background="@color/bg_sender_item"
			        android:visibility="visible">
			        <TextView 
			            android:id="@+id/mLeftSenderAreaShowView"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="@dimen/sender_item_margin_left"
			            android:text="@string/recipient_info"
			            android:layout_alignParentLeft="true"
			            android:textSize="@dimen/sender_textsize_normal"
			            android:textColor="@color/black"
			            android:layout_centerVertical="true"/>
			    </RelativeLayout>
			    <TextView
				    android:layout_width="match_parent"
				    android:layout_height="1dip"
				    android:background="@color/divider_line"/>
			    
			    <RelativeLayout 
			        android:id="@+id/mAddRecipientAddressContainer"
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/sender_address_selector_height"
			        android:layout_marginRight="@dimen/sender_item_margin_left"
			        android:layout_marginLeft="@dimen/sender_item_margin_left2"
			        android:layout_marginTop="@dimen/sender_address_info_margin_top"
			        android:layout_marginBottom="@dimen/sender_address_info_margin_bottom">
			        <ImageView
			            android:id="@+id/mRightIconView2"
			            android:layout_width="@dimen/sender_item_arrow_width"
			            android:layout_height="@dimen/sender_item_arrow_height"
			            android:layout_marginRight="@dimen/sender_item_arrow_margin_right"
			            android:layout_alignParentRight="true"
			            android:layout_centerVertical="true"
			            android:background="@drawable/arrow"
			            android:contentDescription="@null"/>
			         <TextView 
			            android:id="@+id/mMiddleShowView2"
			            android:layout_toLeftOf="@id/mRightIconView2"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:singleLine="true"
			            android:layout_marginRight="@dimen/sender_click_add_contact_margin_right"
			            android:text="@string/click_to_add_contact"
			            android:textSize="@dimen/sender_textsize_small"
			            android:layout_centerVertical="true"/>
			    </RelativeLayout>
			    
			    <RelativeLayout
			        android:id="@+id/mRecipientAddressInfoContainer" 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="@dimen/sender_item_margin_left2"
			        android:layout_marginTop="@dimen/sender_address_info_margin_top"
			        android:layout_marginBottom="@dimen/sender_address_info_margin_bottom"
			        android:visibility="gone">
			        <ImageView
			            android:id="@+id/mRecipientAddressArrowIv"
			            android:layout_width="@dimen/sender_item_arrow_width"
			            android:layout_height="@dimen/sender_item_arrow_height"
			            android:layout_marginRight="@dimen/sender_item_arrow_margin_right"
			            android:background="@drawable/arrow"
			            android:layout_centerInParent="true"
			            android:layout_alignParentRight="true"
			            android:contentDescription="@null"/>
			        <LinearLayout
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:orientation="vertical"
				        android:layout_toLeftOf="@id/mRecipientAddressArrowIv"
				        android:visibility="visible">
				         <LinearLayout
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:orientation="horizontal">
					        <TextView 
						        android:id="@+id/mRecipientNameTv"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:singleLine="true"						
						        android:text="@string/recipient_name"
						        android:textSize="@dimen/sender_textsize_small"
						        android:textColor="@drawable/text_color_black_gray_selector"/>
					        <TextView 
						        android:id="@+id/mRecipientPhoneTv"
						        android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:singleLine="true"
						        android:layout_marginLeft="@dimen/sender_phone_info_margin_left"
						        android:layout_marginRight="@dimen/sender_phone_info_margin_right"
						        android:text="@string/sender_phone"
						        android:textSize="@dimen/sender_textsize_small"
						        android:textColor="@drawable/text_color_black_gray_selector"/>
				        </LinearLayout>
		
				        <TextView 
					        android:id="@+id/mRecipientTotalAddressTv"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:singleLine="true"
					        android:layout_marginRight="@dimen/sender_total_address_margin_right"
					        android:layout_marginTop="4dip"
					        android:text="@string/addreess_detail"
					        android:textSize="@dimen/sender_textsize_small"/>
				    </LinearLayout>
			    </RelativeLayout>
			  
			    <TextView
				    android:layout_width="match_parent"
				    android:layout_height="1dip"
				    android:layout_marginTop="4dip"
				    android:background="@color/divider_line"/>
				<RelativeLayout
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/sender_address_selector_height"
			        android:background="@color/bg_sender_item"
			        android:visibility="visible">
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="@dimen/sender_item_margin_left"
			            android:text="@string/delivery_info"
			            android:layout_alignParentLeft="true"
			            android:textSize="@dimen/sender_textsize_normal"
			            android:textColor="@color/black"
			            android:layout_centerVertical="true"/>
			    </RelativeLayout>
			    <TextView
				    android:layout_width="match_parent"
				    android:layout_height="1dip"
				    android:background="@color/divider_line"/>
			    
				<LinearLayout 
			         android:layout_width="match_parent"
			         android:layout_height="wrap_content"
			         android:layout_marginTop="@dimen/sender_item_margin_top3"
			         android:layout_marginLeft="@dimen/sender_item_margin_left2"
			         android:layout_marginBottom="@dimen/sender_remark_container_margin_bottom"
			         android:orientation="horizontal">
				    <TextView 
				        android:id="@+id/mNameTv"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:singleLine="true"
				        android:text="@string/name"
				        android:textSize="@dimen/sender_textsize_small"
				        android:textColor="@color/text_black"/>
				    <EditText
				        android:id="@+id/mSenderNameEt"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:background="@null"
				        android:hint="@string/hint_input_sender_name"
				        android:textSize="@dimen/sender_textsize_small"
				        android:paddingLeft="@dimen/sender_edittext_padding_left"
				        android:maxLength="30"/>
				</LinearLayout>
				<TextView
				    android:layout_width="match_parent"
				    android:layout_height="1dip"
				    android:background="@color/divider_line"/>
			    
			    <LinearLayout 
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/sender_address_selector_height"
			        android:layout_marginTop="6dip"
			        android:layout_marginBottom="6dip"
			        android:layout_marginLeft="@dimen/sender_item_margin_left2"
			        android:orientation="horizontal"
			        android:gravity="center_vertical">
			        <TextView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        
				        android:text="@string/weight"
				        android:textSize="@dimen/sender_textsize_small"
				        android:textColor="#000000"/>
			        <LinearLayout 
				        android:layout_width="wrap_content"
				        android:layout_height="@dimen/sender_address_selector_height"
				        android:orientation="horizontal"
				        android:gravity="center_vertical"
				        android:background="@drawable/bg_button">
				        <Button
				            android:id="@+id/mMinusBtn"
				            android:layout_width="20dip"
				            android:layout_height="match_parent"
				            android:textSize="24sp"
				            android:text="-"
				            android:textColor="@drawable/text_color_black_white_selector"
				            android:background="@null"/>
				        <EditText
				            android:id="@+id/mWeightEt" 
				            android:layout_width="100dip"
				            android:layout_height="match_parent"
				            android:background="@null"
				            android:text="@string/sender_default_weight"
				            android:paddingLeft="@dimen/sender_edittext_padding_left"
				            android:paddingRight="@dimen/sender_edittext_padding_left"
				            android:gravity="center"
				            android:inputType="numberDecimal"
				            android:maxLength="10"/>
				        <Button
				            android:id="@+id/mPlusBtn"
				            android:layout_width="20dip"
				            android:layout_height="match_parent"
				            android:text="+"
				            android:textSize="24sp"
				            android:textColor="@drawable/text_color_black_white_selector"
				            android:background="@null"/>
			        </LinearLayout>
			    </LinearLayout>
			    <TextView
				    android:layout_width="match_parent"
				    android:layout_height="1dip"
				    android:background="@color/divider_line"/>
			    
			    <LinearLayout 
			         android:layout_width="match_parent"
			         android:layout_height="wrap_content"
			         android:layout_marginTop="@dimen/sender_item_margin_top2"
			         android:layout_marginLeft="@dimen/sender_item_margin_left2"
			         android:layout_marginBottom="@dimen/sender_item_margin_top3"
			         android:orientation="horizontal">
				    <TextView 
				        android:id="@+id/mRemarkTv"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:singleLine="true"
				        android:text="@string/remark"
				        android:textSize="@dimen/sender_textsize_small"
				        android:textColor="@color/text_black"/>
				    <EditText
				        android:id="@+id/mRemarkEt"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:background="@null"
				        android:hint="@string/hint_input_sender_remark"
				        android:textSize="@dimen/sender_textsize_small"
				        android:paddingLeft="@dimen/sender_edittext_padding_left"
				        android:maxLength="30"/>
				</LinearLayout>
				
			    <TextView
				    android:layout_width="match_parent"
				    android:layout_height="1dip"
				    android:layout_marginTop="@dimen/sender_item_margin_top"
				    android:background="@color/divider_line"/>
			    <RelativeLayout 
			        android:id="@+id/mParityContainer"
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/sender_address_selector_height"
			        android:background="@color/bg_sender_item">
			        <TextView 
			            android:id="@+id/mParityComapnyShowView"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="@dimen/sender_item_margin_left"
			            android:text="@string/sender_info_price_compare"
			            android:layout_alignParentLeft="true"
			            android:textSize="@dimen/sender_textsize_normal"
			            android:textColor="@drawable/text_color_selector"
			            android:layout_centerVertical="true"/> 
			         <ImageView
			            android:id="@+id/mRightParityIconView"
			            android:layout_width="@dimen/sender_item_arrow_width"
			            android:layout_height="@dimen/sender_item_arrow_height"
			            android:layout_marginRight="@dimen/sender_item_arrow_margin_right"
			            android:layout_alignParentRight="true"
			            android:layout_centerVertical="true"
			            android:background="@drawable/arrow"
			            android:contentDescription="@null"/>
			         <TextView 
			            android:id="@+id/mMiddleParityShowView"
			            android:layout_toLeftOf="@id/mRightParityIconView"
			            android:layout_toRightOf="@id/mParityComapnyShowView"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:singleLine="true"
			            android:layout_marginLeft="@dimen/sender_item_middle_textview_margin_left"
			            android:layout_marginRight="@dimen/sender_item_middle_textview_margin_right"
			            android:text="@string/go_to_parity"
			            android:textSize="@dimen/sender_textsize_normal"
			            android:textColor="@drawable/text_color_selector"
			            android:layout_centerVertical="true"
			            android:gravity="right"/>
			    </RelativeLayout>
			    <TextView
				    android:layout_width="match_parent"
				    android:layout_height="1dip"
				    android:background="@color/divider_line"/>
			    
			    <TextView
				    android:layout_width="match_parent"
				    android:layout_height="1dip"
				    android:layout_marginTop="@dimen/sender_item_margin_top"
				    android:background="@color/divider_line"/>
			    <RelativeLayout
			        android:id="@+id/mReserveTimeContainer" 
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/sender_address_selector_height"
			        android:background="@color/bg_sender_item">
			        <TextView 
			            android:id="@+id/mLeftShowView1"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="@dimen/sender_item_margin_left"
			            android:text="@string/time_reserve_pickup"
			            android:layout_alignParentLeft="true"
			            android:textSize="@dimen/sender_textsize_normal"
			            android:textColor="@drawable/text_color_selector"
			            android:layout_centerVertical="true"/>
			         <ImageView
			            android:id="@+id/mRightIconView1"
			            android:layout_width="@dimen/sender_item_arrow_width"
			            android:layout_height="@dimen/sender_item_arrow_height"
			            android:layout_marginRight="@dimen/sender_item_arrow_margin_right"
			            android:layout_alignParentRight="true"
			            android:layout_centerVertical="true"
			            android:background="@drawable/arrow"
			            android:contentDescription="@null"/>
			         <TextView 
			            android:id="@+id/mSelectedTimeShowView"
			            android:layout_toLeftOf="@id/mRightIconView1"
			            android:layout_toRightOf="@id/mLeftShowView1"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:singleLine="true"
			            android:layout_marginLeft="@dimen/sender_item_middle_textview_margin_left"
			            android:layout_marginRight="@dimen/sender_item_middle_textview_margin_right"
			            android:text="@string/select_date_time"
			            android:textSize="@dimen/sender_textsize_normal"
			            android:textColor="@drawable/text_color_black_gray_selector"
			            android:layout_centerVertical="true"
			            android:gravity="right"/>
			    </RelativeLayout>
			    <TextView
				    android:layout_width="match_parent"
				    android:layout_height="1dip"
				    android:background="@color/divider_line"/>
			    
			    <TextView 
		            android:id="@+id/mSenderTimePromptTv"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="2dip"
		            android:layout_marginRight="2dip"
		            android:text="@string/sender_time_prompt"
		            android:textSize="@dimen/sender_textsize_smaller"
		            android:textColor="#ff0000"
		            android:gravity="right"
		            android:visibility="gone"/>
			    
			    <com.weiwend.fooldelivery.customviews.TimeSelectorView
			        android:id="@+id/mTimeSelectorView"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_margin="@dimen/sender_time_selector_margin"
		            android:visibility="gone"/>
			    
			    <Button
		            android:id="@+id/mSummitBtn"
		            android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:paddingTop="@dimen/summit_btn_padding_top"
			        android:paddingBottom="@dimen/summit_btn_padding_bottom"
			        android:layout_marginLeft="@dimen/summit_btn_margin_left"
			        android:layout_marginRight="@dimen/summit_btn_margin_right"
			        android:layout_marginTop="@dimen/summit_btn_margin_top"
			        android:layout_marginBottom="@dimen/summit_btn_margin_bottom"
			        android:textSize="@dimen/summit_btn_textsize"
		            android:text="@string/order_submmit"
		            android:background="@drawable/bg_btn_selector"
		            android:textColor="@drawable/btn_text_color_selector"
		            android:enabled="false"/>
			</LinearLayout>
	    </com.weiwend.fooldelivery.customviews.MyReboundScrollView>
	    <!-- </ScrollView> -->

	</RelativeLayout>
	    
</LinearLayout>

