<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/frame_login">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/mDateContainer"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:gravity="center"
	        android:background="@color/orange_selected">
	        <TextView 
	            android:id="@+id/mDateTv"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/textsize_big"
	            android:text="@string/date"
	            android:textColor="@color/white"
	            android:gravity="center_horizontal"/>
	        <ImageView
	            android:id="@+id/mArrowUpIv1"
	            android:layout_width="@dimen/custom_date_time_selector_icon_width"
	            android:layout_height="@dimen/custom_date_time_selector_icon_height"
	            android:background="@drawable/arrow_up"/>
	    </LinearLayout>
	    <LinearLayout
	        android:id="@+id/mTimeContainer"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:gravity="center"
	        android:background="@color/orange_normal">
	        <TextView 
	            android:id="@+id/mTimeTv"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/textsize_big"
	            android:text="@string/time"
	            android:textColor="@color/white"
	            android:gravity="center_horizontal"/>
	        <ImageView
	            android:id="@+id/mArrowUpIv2"
	            android:layout_width="@dimen/custom_date_time_selector_icon_width"
	            android:layout_height="@dimen/custom_date_time_selector_icon_height"
	            android:background="@drawable/arrow_up"
	            android:visibility="invisible"/>
	    </LinearLayout>
    </LinearLayout>
    
    <FrameLayout
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content">
	     <com.weiwend.fooldelivery.customviews.MyGridView
		      android:id="@+id/mTimeGridView"
		      android:layout_width="match_parent"
		      android:layout_height="match_parent"
		      android:layout_gravity="center"
		      android:numColumns="3"
		      android:verticalSpacing="@dimen/custom_date_time_gridview_vertical_spacing"
		      android:horizontalSpacing="@dimen/custom_date_time_gridview_horizontal_spacing"
		      android:visibility="gone"/>
	     <ListView
		      android:id="@+id/mDateListView"
		      android:layout_width="match_parent"
		      android:layout_height="match_parent"
		      android:cacheColorHint="@color/listview_cache_color_hint"
		      android:divider="@color/divider_line"
		      android:dividerHeight="@dimen/listview_divider_height"/>
    </FrameLayout>
        
    <Button
         android:id="@+id/mCancelBtn"
         android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:paddingTop="@dimen/summit_time_date_selector_btn_padding_top"
	     android:paddingBottom="@dimen/summit_time_date_selector_btn_padding_bottom"
	     android:layout_marginLeft="@dimen/summit_time_date_selector_btn_margin_left"
	     android:layout_marginRight="@dimen/summit_time_date_selector_btn_margin_right"
	     android:layout_marginBottom="@dimen/summit_time_date_selector_btn_margin_bottom"
	     android:textSize="@dimen/summit_time_date_selector_btn_textsize"
         android:text="@string/cancel"
         android:background="@drawable/bg_btn_selector"
         android:textColor="@drawable/btn_text_color_selector"
         android:layout_gravity="center_horizontal"/>
</LinearLayout>