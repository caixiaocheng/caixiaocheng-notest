<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="@dimen/item_query_result_margin_top"
	    android:layout_marginBottom="@dimen/item_query_result_margin_bottom"
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:background="@color/bg_query_result_item">
	    <ImageView
	        android:id="@+id/mArrowIv"
	        android:layout_width="@dimen/item_query_result_icon_width"
	        android:layout_height="@dimen/item_query_result_icon_height"
	        android:layout_marginLeft="@dimen/item_query_result_icon_margin_left"
	        android:background="@drawable/arrow_single"
	        android:scaleType="fitCenter"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"/>
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@id/mArrowIv"
		    android:layout_marginRight="@dimen/item_query_result_content_margin_right"
		    android:orientation="vertical"
		    android:layout_centerVertical="true">
			<TextView
			     android:id="@+id/mDateView" 
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:layout_marginLeft="@dimen/item_query_result_date_margin"
			     android:layout_marginRight="@dimen/item_query_result_date_margin"
			     android:layout_marginTop="@dimen/item_query_result_date_margin"
			     android:textSize="@dimen/textsize_small"
			     android:textColor="@color/black"
			     android:singleLine="false"
			     android:textStyle="bold"/>
		    <LinearLayout
			     android:id="@+id/mTimeContainer" 
			     android:layout_width="match_parent"
			     android:layout_height="wrap_content"
			     android:layout_marginTop="@dimen/item_query_result_time_container_margin_top"
			     android:layout_marginBottom="@dimen/item_query_result_time_container_margin_bottom"
			     android:orientation="vertical">
			</LinearLayout>
		</LinearLayout>
	
	</RelativeLayout>
</LinearLayout>