<?xml version="1.0" encoding="utf-8"?>
<com.weiwend.fooldelivery.customviews.ScrollLinerLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:background="@drawable/listview_item_bg_selector">
    
	    <RelativeLayout
	        android:id="@+id/mLeftContainer"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:visibility="visible">
		    <ImageView
		        android:id="@+id/mArrowView" 
		        android:layout_width="@dimen/listview_arrow_btn_width"
		        android:layout_height="@dimen/listview_arrow_btn_height"
		        android:layout_marginRight="@dimen/listview_arrow_btn_margin_right"
		        android:background="@drawable/arrow"
		        android:layout_alignParentRight="true"
		        android:layout_centerInParent="true"/>
		    <com.weiwend.fooldelivery.customviews.MyLoaderImageView
		        android:id="@+id/mLoaderImageView"
		        android:layout_width="@dimen/listview_icon_width"
		        android:layout_height="@dimen/listview_icon_height"
		        android:layout_margin="@dimen/listview_icon_margin"
		        android:layout_alignParentLeft="true"
		        android:layout_centerInParent="true"/>
		    <LinearLayout
		        android:layout_toLeftOf="@id/mArrowView"
		        android:layout_toRightOf="@id/mLoaderImageView"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:layout_centerInParent="true">
			    <LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:layout_marginLeft="@dimen/send_history_item_container_margin_left"
				    android:layout_marginRight="@dimen/send_history_item_container_margin_right"
				    android:layout_marginTop="@dimen/send_history_item_container_margin_top"
				    android:layout_marginBottom="@dimen/send_history_item_container_margin_bottom"
				    android:gravity="center_vertical">
					 <TextView
					     android:id="@+id/mCNameView" 
					     android:layout_width="wrap_content"
					     android:layout_height="wrap_content"
					     android:textSize="@dimen/send_history_item_textsize"
					     android:textColor="@color/black"
					     android:singleLine="true"/>
					 <TextView
					     android:id="@+id/mSnumView" 
					     android:layout_width="match_parent"
					     android:layout_height="wrap_content"
					     android:textSize="@dimen/send_history_item_textsize"
					     android:textColor="@color/black"
					     android:singleLine="true"/>
			    </LinearLayout>
			    <LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:layout_marginLeft="@dimen/send_history_item_container_margin_left"
				    android:layout_marginRight="@dimen/send_history_item_container_margin_right"
				    android:layout_marginBottom="@dimen/send_history_item_container_margin_bottom">
					 <TextView
					     android:id="@+id/mStatusView" 
					     android:layout_width="wrap_content"
					     android:layout_height="wrap_content"
					     android:textSize="@dimen/send_history_item_textsize"
					     android:textColor="@color/black"
					     android:singleLine="true"/>
					 <TextView
					     android:id="@+id/mOrderTimeView" 
					     android:layout_width="match_parent"
					     android:layout_height="wrap_content"
					     android:textSize="@dimen/send_history_item_textsize"
					     android:textColor="@color/black"
					     android:singleLine="true"/>
			    </LinearLayout>
			</LinearLayout>
		    
	    </RelativeLayout>
	    <LinearLayout
	        android:id="@+id/mRightContainer"
	        android:layout_width="@dimen/delete_action_len"
	        android:layout_height="match_parent"
	        android:background="#9FA0A0"
	        android:orientation="horizontal"
	        android:gravity="center">
		    <ImageView
		        android:layout_width="@dimen/send_history_item_delete_btn_width"
		        android:layout_height="@dimen/send_history_item_delete_btn_height"
		        android:background="@drawable/delete_listview"/>
	        <TextView
	            android:id="@+id/mDeleteView"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/send_history_item_delete_text_margin_left"
	            android:gravity="center"
	            android:text="@string/btn_delete"
	            android:textSize="@dimen/send_history_item_delete_text_textsise"
	            android:textColor="@drawable/btn_text_color_selector" />
	    </LinearLayout>

</com.weiwend.fooldelivery.customviews.ScrollLinerLayout >