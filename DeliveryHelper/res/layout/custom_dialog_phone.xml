<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <TextView
            android:id="@+id/mTitleTv"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/custom_dialog_phone"
		    android:layout_marginLeft="@dimen/custom_dialog_title_margin_left"
		    android:layout_marginTop="@dimen/custom_dialog_title_margin_top"
		    android:layout_marginBottom="@dimen/custom_dialog_title_margin_bottom"
		    android:textColor="@color/orange_normal"
		    android:textSize="@dimen/textsize_big"/>
        <TextView
		    android:layout_width="fill_parent"
		    android:layout_height="@dimen/listview_divider_height"
		    android:layout_marginLeft="@dimen/custom_dialog_line_margin_left"
		    android:layout_marginRight="@dimen/custom_dialog_line_margin_right"
		    android:background="@color/orange_normal"/>
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/custom_dialog_content_margin_top"
			android:layout_marginBottom="@dimen/custom_dialog_content_margin_bottom"
	        android:orientation="horizontal"
	        android:gravity="center">
	        <TextView
	            android:id="@+id/mPreTv"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:textSize="@dimen/textsize_normal"
			    android:textColor="@color/black"
			    android:text="@string/custom_dialog_dial"/>
	        <TextView
		        android:id="@+id/mTelpTv"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:textSize="@dimen/textsize_normal"
			    android:layout_marginLeft="4dip"
			    android:textColor="@color/black"/>
        </LinearLayout>
    
     <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/custom_dialog_bottom_margin_top"
			android:layout_marginBottom="@dimen/custom_dialog_bottom_margin_bottom"
	        android:orientation="horizontal"
	        android:gravity="center">
		    <Button
		       android:id="@+id/mSummitBtn"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:paddingTop="@dimen/dialog_btn_padding_top"
		       android:paddingBottom="@dimen/dialog_btn_padding_bottom"
		       android:paddingLeft="@dimen/dialog_btn_padding_left"
		       android:paddingRight="@dimen/dialog_btn_padding_right"
		       android:text="@string/summit"
		       android:textColor="@drawable/btn_text_color_selector"
		       android:background="@drawable/bg_btn_selector"
		       android:layout_gravity="center_horizontal"
		       android:textSize="@dimen/textsize_normal"/>
		    <Button
		       android:id="@+id/mCancelBtn"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:layout_marginLeft="@dimen/dialog_btn_margin_left"
		       android:paddingTop="@dimen/dialog_btn_padding_top"
		       android:paddingBottom="@dimen/dialog_btn_padding_bottom"
		       android:paddingLeft="@dimen/dialog_btn_padding_left"
		       android:paddingRight="@dimen/dialog_btn_padding_right"
		       android:text="@string/cancel"
		       android:textColor="@drawable/btn_text_color_selector"
		       android:background="@drawable/bg_btn_selector"
		       android:layout_gravity="center_horizontal"
		       android:textSize="@dimen/textsize_normal"/>
    </LinearLayout>
    
</LinearLayout>