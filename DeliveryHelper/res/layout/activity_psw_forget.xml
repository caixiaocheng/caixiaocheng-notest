<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">
    
    <include layout="@layout/activity_title"/>
    
    <com.weiwend.fooldelivery.customviews.MyReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
	        <EditText
		        android:id="@+id/mOldMobileNumberEt" 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="@dimen/psw_forget_edittext_margin_top"
		        android:layout_marginBottom="@dimen/psw_forget_edittext_margin_bottom"
		        android:paddingLeft="@dimen/psw_forget_edittext_padding_left"
		        android:hint="@string/hint_input_registered_mobile_number"
		        android:background="@null"
		        android:inputType="number"
		        android:textSize="@dimen/psw_forget_textsize_normal"
		        android:maxLength="@integer/edittext_phone_max_length"/>
		    
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/listview_divider_height"
		        android:background="@color/divider_line"/>
		    
		    <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="@dimen/psw_forget_container_code_margin_top">
	            <Button
			        android:id="@+id/mGetCodeBtn" 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:background="@drawable/bg_btn_selector"
			        android:text="@string/code_get"
			        android:textSize="@dimen/psw_forget_textsize_normal"
			        android:textColor="@drawable/btn_text_color_selector"
			        android:paddingLeft="@dimen/user_register_btn_code_padding_left"
			        android:paddingRight="@dimen/user_register_btn_code_padding_right"
			        android:paddingTop="@dimen/user_register_btn_code_padding_top"
			        android:paddingBottom="@dimen/user_register_btn_code_padding_bottom"
			        android:layout_marginRight="@dimen/user_register_btn_code_margin_right"
			        android:layout_marginBottom="@dimen/psw_forget_btn_code_margin_bottom"
			        android:layout_marginTop="@dimen/psw_forget_btn_code_margin_top"
			        android:layout_centerVertical="true"/>
	            <EditText
			        android:id="@+id/mCodeEt" 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_toLeftOf="@id/mGetCodeBtn"
		            android:paddingLeft="@dimen/psw_forget_edittext_padding_left"
			        android:hint="@string/hint_input_mms_code"
			        android:background="@null"
			        android:layout_centerVertical="true"
			        android:inputType="number"
			        android:textSize="@dimen/psw_forget_textsize_normal"
			        android:maxLength="4"/>
	        </RelativeLayout>
	        
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/listview_divider_height"
		        android:background="@color/divider_line"/>
		    
	        <EditText
		        android:id="@+id/mPswEt" 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="@dimen/psw_forget_edittext_margin_top"
		        android:layout_marginBottom="@dimen/psw_forget_edittext_margin_bottom"
		        android:paddingLeft="@dimen/psw_forget_edittext_padding_left"
		        android:hint="@string/hint_set_new_psw"
		        android:background="@null"
		        android:inputType="textPassword"
		        android:textSize="@dimen/psw_forget_textsize_normal"
		        android:maxLength="@integer/edittext_max_length"/>
		    
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/listview_divider_height"
		        android:background="@color/divider_line"/>
		    
	        <EditText
		        android:id="@+id/mRepeatedPswEt" 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="@dimen/psw_forget_edittext_margin_top"
		        android:layout_marginBottom="@dimen/psw_forget_edittext_margin_bottom"
		        android:paddingLeft="@dimen/psw_forget_edittext_padding_left"
		        android:hint="@string/hint_input_psw_secondly"
		        android:background="@null"
		        android:inputType="textPassword"
		        android:textSize="@dimen/psw_forget_textsize_normal"
		        android:maxLength="@integer/edittext_max_length"/>
		    
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/listview_divider_height"
		        android:background="@color/divider_line"/>
		    
		    <Button
		        android:id="@+id/mSummitBtn"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="@dimen/summit_btn_padding_top"
		        android:paddingBottom="@dimen/summit_btn_padding_bottom"
		        android:layout_marginLeft="@dimen/summit_btn_margin_left"
		        android:layout_marginRight="@dimen/summit_btn_margin_right"
		        android:layout_marginTop="@dimen/summit_btn_margin_top"
		        android:text="@string/summit"
		        android:textColor="@drawable/btn_text_color_selector"
		        android:textSize="@dimen/summit_btn_textsize"
		        android:background="@drawable/bg_btn_selector"
		        android:enabled="true"/>
		    </LinearLayout>
    </com.weiwend.fooldelivery.customviews.MyReboundScrollView>
</LinearLayout>	