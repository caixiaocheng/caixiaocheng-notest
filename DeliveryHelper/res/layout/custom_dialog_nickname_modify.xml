<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:id="@+id/mBottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" 
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/mCancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/summit_btn_margin_bottom"
            android:background="@drawable/bg_btn_selector"
            android:paddingBottom="@dimen/summit_btn_padding_bottom"
            android:paddingTop="@dimen/summit_btn_padding_top"
            android:paddingLeft="@dimen/summit_btn_padding_left"
            android:paddingRight="@dimen/summit_btn_padding_right"
            android:text="@string/cancel"
            android:textColor="@drawable/btn_text_color_selector"
            android:textSize="@dimen/textsize_normal" />

        <Button
            android:id="@+id/mSummitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/summit_btn_margin_bottom"
            android:layout_marginLeft="@dimen/summit_btn_margin_left"
            android:background="@drawable/bg_btn_selector"
            android:paddingBottom="@dimen/summit_btn_padding_bottom"
            android:paddingTop="@dimen/summit_btn_padding_top"
             android:paddingLeft="@dimen/summit_btn_padding_left"
            android:paddingRight="@dimen/summit_btn_padding_right"
            android:text="@string/summit"
            android:textColor="@drawable/btn_text_color_selector"
            android:textSize="@dimen/textsize_normal" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/mBottomContainer"
        android:orientation="vertical">
        <TextView
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/dialog_title_nickname_modify"
		    android:layout_marginLeft="@dimen/custom_dialog_title_margin_left"
		    android:layout_marginTop="@dimen/custom_dialog_title_margin_top"
		    android:layout_marginBottom="@dimen/custom_dialog_title_margin_bottom"
		    android:textColor="@color/orange_normal"
		    android:textSize="@dimen/textsize_big"/>
        <TextView
		    android:layout_width="fill_parent"
		    android:layout_height="@dimen/listview_divider_height"
		    android:layout_marginLeft="@dimen/custom_dialog_line_margin_left"
		    android:layout_marginRight="@dimen/custom_dialog_line_margin_right"
		    android:background="@color/orange_normal"/>
        <EditText
	        android:id="@+id/mContentEt"
		    android:layout_width="fill_parent"
		    android:layout_height="match_parent"
		    android:layout_marginTop="@dimen/custom_dialog_content_margin_top"
		    android:layout_marginBottom="@dimen/custom_dialog_content_margin_bottom"
		    android:hint="@string/hint_input_new_nickname"
		    android:paddingLeft="@dimen/custom_dialog_content_padding_left"
		    android:background="@null"
		    android:maxLength="30"/>
    </LinearLayout>
    
</RelativeLayout>