<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">
    <ImageView
        android:id="@+id/mArrowView" 
        android:layout_width="@dimen/listview_arrow_btn_width"
        android:layout_height="@dimen/listview_arrow_btn_height"
        android:layout_marginLeft="@dimen/listview_arrow_btn_margin_right"
        android:layout_marginRight="@dimen/listview_arrow_btn_margin_right"
        android:background="@drawable/arrow"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:layout_toLeftOf="@id/mArrowView"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_centerInParent="true">
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
			 <TextView
			     android:id="@+id/mTitleView" 
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:layout_marginLeft="@dimen/item_address_margin"
			     android:layout_marginRight="@dimen/item_address_margin"
			     android:layout_marginTop="@dimen/item_address_margin"
			     android:textSize="@dimen/textsize_normal"
			     android:textColor="@color/black"
			     android:singleLine="true"/>
			 <TextView
			     android:id="@+id/mPhoneView" 
			     android:layout_width="match_parent"
			     android:layout_height="wrap_content"
			     android:layout_marginLeft="@dimen/item_address_margin"
			     android:layout_marginRight="@dimen/item_address_margin"
			     android:layout_marginTop="@dimen/item_address_margin"
			     android:layout_marginBottom="@dimen/item_address_margin"
			     android:textSize="@dimen/textsize_normal"
			     android:textColor="@color/black"
			     android:singleLine="true"/>
	    </LinearLayout>
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
			 <TextView
			     android:id="@+id/mPreAddressView" 
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:layout_marginLeft="@dimen/item_address_margin"
			     android:layout_marginRight="@dimen/item_address_margin"
			     android:layout_marginTop="@dimen/item_address_margin"
			     android:textSize="@dimen/textsize_normal"
			     android:textColor="@color/black"
			     android:singleLine="true"/>
			 <TextView
			     android:id="@+id/mDetailAddressView" 
			     android:layout_width="match_parent"
			     android:layout_height="wrap_content"
			     android:layout_marginLeft="@dimen/item_address_margin"
			     android:layout_marginRight="@dimen/item_address_margin"
			     android:layout_marginTop="@dimen/item_address_margin"
			     android:layout_marginBottom="@dimen/item_address_margin"
			     android:textSize="@dimen/textsize_normal"
			     android:textColor="@color/black"
			     android:singleLine="true"/>
	    </LinearLayout>
	</LinearLayout>
</RelativeLayout>